---
import { Icon } from 'astro-icon';
import { getRelativeLink } from '~/utils/permalinks';

const social = [
	{ label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/reckoningdev' },
	{ label: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://www.instagram.com/nature.photons' },
	{ label: 'LinkedIn', icon: 'tabler:brand-linkedin', href: 'https://linkedin.com/in/sadanandsingh' },
	{ label: 'Facebook', icon: 'tabler:brand-facebook', href: 'https://www.facebook.com/sadanand4singh' },
	{ label: 'RSS', icon: 'tabler:rss', href: getRelativeLink('/rss.xml') },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/sadanand-singh' },
];
---

<footer class="border-t border-gray-200 dark:border-slate-800 bg-gray-50 dark:bg-gray-800 dark:text-gray-100">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="mt-10 p-6 sm:p-12 bg-gray-50 text-gray-800 dark:bg-gray-800 dark:text-gray-100">
			<div class="flex flex-col space-y-4 md:space-y-0 md:space-x-6 md:flex-row">
				<img
					src="/sadanand.jpeg"
					alt=""
					class="self-center flex-shrink-0 w-24 h-24 border rounded-full md:justify-self-start bg-gray-500 border-gray-300"
				/>
				<div class="flex flex-col">
					<h4 class="text-lg font-semibold text-center md:text-left">Sadanand Singh</h4>
					<p class="text-gray-600 dark:text-gray-300">
						An expert in computational modeling, machine learning and applied computer vision. Loves programming,
						writing, reading, cooking and photography! Want some advice? Give some feedback? Feel free to contact using
						links below!
					</p>
				</div>
			</div>
		</div>
		<div class="md:flex md:items-center md:justify-between py-6 md:py-8">
			<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
				{
					social.map(({ label, href, icon }) => (
						<li>
							<a
								class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
								aria-label={label}
								href={href}
							>
								<Icon name={icon} class="w-5 h-5" />
							</a>
						</li>
					))
				}
			</ul>

			<div class="text-sm text-gray-700 mr-4 dark:text-slate-400">
				<span
					class="w-5 h-5 md:w-6 md:h-6 md:-mt-0.5 bg-cover mr-1.5 float-left rounded-sm bg-[url(https://onwidget.com/favicon/favicon-32x32.png)]"
				>
				</span>
				Made by <a class="text-blue-600 hover:underline dark:text-gray-200" href="https://twitter.com/reckoningdev">
					@reckoningdev</a
				> Â· All rights reserved.
			</div>
		</div>
	</div>
</footer>
